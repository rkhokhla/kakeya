{
  "dashboard": {
    "title": "Fractal LBA - Buyer Dashboard v2 (Phase 7)",
    "tags": ["fractal-lba", "buyer-kpis", "phase-7"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 2,
    "refresh": "30s",
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Hallucination Containment Rate (SLO: ≥98%)",
        "type": "gauge",
        "targets": [
          {
            "expr": "100 * (1 - sum(rate(flk_escalated[7d])) / sum(rate(flk_ingest_total[7d])))",
            "legendFormat": "Containment %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 98, "color": "green"}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Cost Per Trusted Task (7-day avg)",
        "type": "stat",
        "targets": [
          {
            "expr": "avg_over_time(flk_cost_per_trusted_task[7d])",
            "legendFormat": "Avg Cost (USD)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.05, "color": "red"}
              ]
            },
            "unit": "currencyUSD",
            "decimals": 4
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "HRS Prediction Quality (AUC, shadow mode)",
        "type": "gauge",
        "targets": [
          {
            "expr": "flk_hrs_auc",
            "legendFormat": "AUC",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.75, "color": "yellow"},
                {"value": 0.85, "color": "green"}
              ]
            },
            "unit": "none",
            "min": 0,
            "max": 1,
            "decimals": 3
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Ensemble Agreement Rate (%)",
        "type": "gauge",
        "targets": [
          {
            "expr": "100 * sum(flk_ensemble_agreement_rate) / count(flk_ensemble_agreement_rate)",
            "legendFormat": "Agreement %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "green"}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Escalation Rate (SLO: ≤2%)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "100 * rate(flk_escalated[5m]) / rate(flk_ingest_total[5m])",
            "legendFormat": "Escalation %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 2, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Cost Breakdown (7-day total)",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(increase(flk_cost_compute_usd[7d]))",
            "legendFormat": "Compute",
            "refId": "A"
          },
          {
            "expr": "sum(increase(flk_cost_storage_usd[7d]))",
            "legendFormat": "Storage",
            "refId": "B"
          },
          {
            "expr": "sum(increase(flk_cost_network_usd[7d]))",
            "legendFormat": "Network",
            "refId": "C"
          },
          {
            "expr": "sum(increase(flk_cost_anchoring_usd[7d]))",
            "legendFormat": "Anchoring",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "HRS Latency P95 (SLO: ≤10ms)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(flk_hrs_latency_ms_bucket[5m]))",
            "legendFormat": "P95 Latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Ensemble Latency P95 (budget: ≤100ms)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(flk_ensemble_latency_ms_bucket[5m]))",
            "legendFormat": "P95 Latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 9,
        "title": "Anomaly Detection Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "avg_over_time(flk_anomaly_rate[5m])",
            "legendFormat": "Anomaly Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.05, "color": "yellow"},
                {"value": 0.10, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 10,
        "title": "High-Risk Request Rate (HRS)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(flk_hrs_high_risk[5m])",
            "legendFormat": "High Risk (≥0.7)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 11,
        "title": "Cost Per Trusted Task Trend (by tenant)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "flk_cost_per_trusted_task",
            "legendFormat": "{{tenant_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 5
            },
            "unit": "currencyUSD",
            "decimals": 4
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 12,
        "title": "Budget Utilization (by tenant)",
        "type": "bar",
        "targets": [
          {
            "expr": "flk_budget_used",
            "legendFormat": "{{tenant_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.9, "color": "red"}
              ]
            },
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      },
      {
        "id": 13,
        "title": "Savings vs Control Cohort",
        "type": "stat",
        "targets": [
          {
            "expr": "100 * (1 - sum(flk_cost_per_trusted_task{cohort=\"phase7\"}) / sum(flk_cost_per_trusted_task{cohort=\"control\"}))",
            "legendFormat": "Savings %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10, "color": "yellow"},
                {"value": 15, "color": "green"}
              ]
            },
            "unit": "percent",
            "decimals": 1
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 40}
      },
      {
        "id": 14,
        "title": "Ensemble Disagreements (WORM logged)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(flk_ensemble_disagreements[5m])",
            "legendFormat": "Disagreements/s",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "ops"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 40}
      },
      {
        "id": 15,
        "title": "HRS Model Confidence Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(flk_hrs_confidence_bucket[5m])) by (le)",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "tenant_id",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(flk_ingest_total, tenant_id)",
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"HRS.*|Ensemble.*|Anomaly.*\"}",
          "name": "Phase 7 Alerts",
          "tagKeys": "alertname,severity",
          "textFormat": "{{alertname}}: {{severity}}",
          "titleFormat": "Alert"
        }
      ]
    }
  }
}
